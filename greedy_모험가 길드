n = int(input())
fearness = map(int, input.split())
fearness.sort()  #오름차순 정렬

group_no = 0 #총 그룹의 수
ppl_no = 0   #현재 그룹에 포함된 모험가의 수

for idx in fearness : #공포도를 낮은 것부터 하나씩 확인하며
	 ppl_no += 1  #현재 그룹에 해당 모험가를 포함시키기
	 if ppl_no >= idx :  #현재 그룹에 포함된 모험가의 수가 현재의 공포도 이상이라면, 그룹 결성
		 group_no += 1  #총 그룹의 수 증가시키기
		 ppl_no = 0   # 현재 그룹에 포함된 모험가의 수 초기화

print(group_no)  # 총 그룹의 수 출력
